@{
    ViewData["Title"] = "Free Withdrawals";
}
@section Styles{
    <link href="~/admin-app/controllers/withdraw-dolp/index.css" rel="stylesheet" asp-append-version="true" />
}
@section Scripts{
    <script src="~/admin-app/controllers/withdraw-dolp/index.js"></script>
    <script>
        var withdrawDOLPObj = new WithdrawDOLPController();
        withdrawDOLPObj.initialize();
    </script>
}
<div class="app-content icon-content">
    <div class="section">
        <div class="page-header">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"><i class="ti-package mr-1"></i> Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
            </ol>
            <div class="mt-3 mt-lg-0"></div>
        </div>
        <div class="row">
            <div class="col-sm-4 col-md-12 col-lg-4 col-xl-4 offset-xl-4 offset-lg-4">
                <div class="card">
                    <div class="card-body" style="padding: 1.5rem 1.5rem;">
                        <form>
                            @Html.AntiForgeryToken()

                            <div class="box-platform">
                                <div class="form-group">
                                    <label class="form-control-label">DOLP Balance</label>
                                    <input type="text" readonly class="form-control numberFormat"
                                           value="@(5000000).ToString().Replace(',', '.')">
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">Address Receiving</label>
                                    <input type="text" class="form-control" id="txtAddressReceiving">
                                </div>
                                <div class="text-center">
                                    <button class="btn btn-green-ct mt-4" type="button" id="btnWithdraw">
                                        Withdraw Now
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- row opened -->
    </div>
</div>
